{
    "name": "Archiveror",
    "author": "Rahiel Kasim",
    "description": "Archiveror will help you preserve the webpages you love.",
    "version": "0.1",

    "icons": { "16": "icon-16.png",
               "48": "icon-48.png",
               "128": "icon-128.png" },

    "permissions": [
        "tabs",
        "bookmarks",
        "storage",
        "https://archive.today/"
    ],

    "background": {
        "scripts": ["archiveror.js"],
        "persistent": false
    },

    "browser_action": {
        "default_icon": {
            "19": "icon-19.png",
            "38": "icon-38.png"
        },
        "default_title": "Archive Page"
    },

    "commands": {
        "archive-page": {
            "suggested_key": {"default": "Ctrl+Y"},
            "description": "Archive the current page"
        }
    },

    "manifest_version": 2
}
