{
    "name": "Archiveror",
    "author": "Rahiel Kasim",
    "description": "Archive webpages on archive.is or on your own computer in MHTML format. Archiveror will also automatically archive your bookmarks.",
    "version": "0.3.3",

    "icons": { "16": "icon-16.png",
               "48": "icon-48.png",
               "128": "icon-128.png" },

    "permissions": [
        "tabs",
        "bookmarks",
        "storage",
        "https://archive.is/",
        "downloads",
        "downloads.shelf",
        "pageCapture",
        "<all_urls>"
    ],

    "background": {
        "scripts": ["archiveror.js"],
        "persistent": false
    },

    "browser_action": {
        "default_icon": {
            "19": "icon-19.png",
            "38": "icon-38.png"
        },
        "default_title": "Archive Page"
    },

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "commands": {
        "archive-page": {
            "suggested_key": {"default": "Alt+Y"},
            "description": "Submit current page to archive.is"
        },
        "save-local": {
            "suggested_key": {"default": "Ctrl+Shift+S"},
            "description": "Save current page locally as MHTML"
        }
    },

    "manifest_version": 2
}
