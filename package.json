{
  "name": "archiveror",
  "license": "GPL-3.0+",
  "author": "Rahiel Kasim",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ignore-path .gitignore",
    "build": "babel firefox/ -d dist-firefox && babel chromium/ -d dist-chromium",
    "firedev": "babel firefox/ -d dist-firefox --watch",
    "chromedev": "babel chromium/ -d dist-chromium --watch",
    "firefox": "jpm -b /usr/bin/firefox --addon-dir dist-firefox run",
    "xpi": "jpm --addon-dir dist-firefox xpi"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rahiel/archiveror.git"
  },
  "bugs": {
    "url": "https://github.com/rahiel/archiveror/issues"
  },
  "devDependencies": {
    "babel-cli": "^6.6.0",
    "babel-preset-es2015": "^6.6.0",
    "eslint": "^2.2.0",
    "jpm": "^1.0.6"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
