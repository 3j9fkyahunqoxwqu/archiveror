{
    "name": "Archiveror",
    "author": "Rahiel Kasim",
    "description": "Archive webpages on archive.is, archive.org and more or on your own computer in MHTML format. Automatically archive your bookmarks.",
    "version": "0.8",
    "applications": {
        "gecko": {
            "id": "archiveror@love.addons.mozilla.org",
            "strict_min_version": "52.0"
        }
    },
    "minimum_chrome_version": "48",
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },

    "permissions": [
        "tabs",
        "bookmarks",
        "storage",
        "downloads",
        "downloads.shelf",
        "pageCapture",
        "<all_urls>",
        "clipboardWrite",
        "contextMenus"
    ],

    "background": {
        "scripts": ["archiveror.js"],
        "persistent": false
    },

    "browser_action": {
        "default_icon": {
            "19": "icon-19.png",
            "38": "icon-38.png"
        },
        "default_title": "Archive Page"
    },

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "commands": {
        "archive-page": {
            "suggested_key": {"default": "Alt+Shift+Y"},
            "description": "Archive current page online"
        },
        "save-local": {
            "suggested_key": {"default": "Ctrl+Shift+S"},
            "description": "Save current page locally as MHTML"
        }
    },

    "manifest_version": 2
}
